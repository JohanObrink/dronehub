<div class="page-header">
    <h1>Index of drone</h1>
</div>

<div class="row">
    <div class="span12">
        <% if(!everyauth.loggedIn) { %>Not logged in<% } %>
    </div>
</div>

<div class="row">
    <div class="span12">
        <p><%- link_to('<i class="icon-plus icon-white"></i> New drone', path_to.new_drone(), {class: 'btn btn-primary'}) %></>
    </div>
</div>

<div class="row">
    <div class="span12">
        <% if (drones.length > 0) { %>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% drones.forEach(function (drone) { %>
                        <tr>
                            <td><strong><%- link_to('drone #' + drone.id, path_to.drone(drone)) %></strong></td>
                            <td>
                                <%- link_to('<i class="icon-edit"></i> Edit', path_to.edit_drone(drone), {class: 'btn btn-mini'}) %>
                                <%- link_to('<i class="icon-remove icon-white"></i> Delete', path_to.drone(drone), {class: 'btn btn-mini btn-danger', method: 'delete', remote: true, jsonp: '(function (u) {location.href = u;})'}) %>        
                            </td>
                        </tr>
                    <% }); %>        
                </tbody>
            </table>
        <% } else { %>
            <p class="alert alert-block alert-info">
                <strong>No drones were found.</strong> 
            </p>
        <% } %>
    </div>
</div>