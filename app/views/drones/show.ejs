<div class="page-header">
    <h1>Details of drone</h1>
</div>


<table class="table table-bordered">
    <tbody>
        <tr><th>name</th><td><%= drone.name %></td></tr>
        <tr><th>description</th><td><%= drone.description %></td></tr>
        <tr><th>created</th><td><%= drone.created %></td></tr>
        <tr><th>connectionKey</th><td><%= drone.connectionKey %></td></tr>
        <tr><th>connected</th><td><%= drone.connected %></td></tr>    
    </tbody>
</table>

<div class="well">
    <%- link_to('<i class="icon-edit icon-white"></i> Edit', path_to.edit_drone(drone), {class: 'btn btn-primary'}) %>
    <%- link_to('<i class="icon-remove icon-white"></i> Delete', path_to.drone(drone), {class: 'btn btn-danger', method: 'delete', remote: true, jsonp: '(function (u) { location.href = u; })'}) %>
    or
    <%- link_to('Back to index', path_to.drones()) %>
</div>