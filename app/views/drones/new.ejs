<div class="page-header">
    <h1>New drone</h1>
</div>

<% form_for(drone, {action: path_to.drones(), method: 'POST', id: "drone_form", class: 'form-horizontal'}, function (form) { %>
    <%- partial('drones/form.ejs', {locals: {form: form, drone: drone}}) %>
    <div class="form-actions">
        <%- form.submit('<i class="icon-ok icon-white"></i> Create drone', {class: 'btn btn-primary'}) %> or
        <%- link_to('Cancel', path_to.drones(), {class: 'btn'}) %>
    </div>
<% });%>
